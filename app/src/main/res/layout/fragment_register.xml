<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    tools:context=".fragment.RegisterFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/loginbg"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/card_logo"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_117sdp"
        android:layout_marginStart="@dimen/_90sdp"
        android:layout_marginEnd="@dimen/_90sdp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/_11sdp"
        app:cardElevation="@dimen/_3sdp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/Register"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                app:layout_constraintVertical_bias="0.49"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/T_in_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_22sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_22sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_logo">

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:inputType="textEmailAddress"
            android:gravity="center|start"
            android:hint="@string/Email"
            android:padding="@dimen/_2sdp"
            android:textColorHint="@color/colorGrey6"
            android:textStyle="bold"
            android:textSize="@dimen/_13sdp"
            android:drawableStart="@drawable/message"
            android:drawablePadding="@dimen/_10sdp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/T_in_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_22sdp"
        android:layout_marginEnd="@dimen/_22sdp"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorGrey6"
        app:layout_constraintTop_toBottomOf="@id/T_in_email">

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:hint="@string/Password"
            android:inputType="textPassword"
            android:padding="@dimen/_2sdp"
            android:textSize="@dimen/_13sdp"
            android:drawableStart="@drawable/password"
            android:drawablePadding="@dimen/_10sdp"
            android:textStyle="bold"/>

    </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/T_in_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_22sdp"
            android:layout_marginEnd="@dimen/_22sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/T_in_password">

            <EditText
                android:id="@+id/ET_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:inputType="number"
                android:gravity="center|start"
                android:hint="@string/Phone_Number"
                android:padding="@dimen/_2sdp"
                android:textColorHint="@color/colorGrey6"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"
                android:drawableStart="@drawable/phone"
                android:drawablePadding="@dimen/_10sdp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_madinaty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_22sdp"
            android:layout_marginEnd="@dimen/_22sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/T_in_phone"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_madinaty"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_gravity="center"
                android:background="#fff"
                android:gravity="center|start"
                android:textColor="#ffff"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ic_spinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:prompt="@string/Madinaty"

               />

            <ImageView
                android:id="@+id/ic_spinner"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/downarrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ic_Pin_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@drawable/pin"
                android:paddingStart="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                 app:layout_constraintStart_toStartOf="@id/spinner_madinaty"
                app:layout_constraintTop_toTopOf="parent" />
    <View
    android:layout_width="match_parent"
    android:layout_height="@dimen/_1sdp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/ic_spinner"
    android:background="@color/colorGrey6"
    android:layout_marginTop="@dimen/_1sdp"
    android:clickable="true"
    />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/T_in_street_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_22sdp"
            android:layout_marginEnd="@dimen/_22sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constraint_madinaty">

            <EditText
                android:id="@+id/ET_street_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:inputType="text"
                android:gravity="center|start"
                android:hint="@string/Street_name"
                android:padding="@dimen/_2sdp"
                android:textColorHint="@color/colorGrey6"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"
                android:drawableStart="@drawable/phone"
                android:drawablePadding="@dimen/_10sdp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_22sdp"
            android:layout_marginEnd="@dimen/_22sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/T_in_street_name"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_group"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_gravity="center"
                android:background="#fff"
                android:gravity="center|start"
                android:textColor="#ffff"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ic_spinner_group"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:prompt="@string/Group"

                />

            <ImageView
                android:id="@+id/ic_spinner_group"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/downarrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ic_Pin_spinner_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@drawable/pin"
                android:paddingStart="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/spinner_group"
                app:layout_constraintTop_toTopOf="parent" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ic_spinner_group"
                android:background="@color/colorGrey6"
                android:layout_marginTop="@dimen/_1sdp"
                android:clickable="true"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/T_in_building_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_22sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_22sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constraint_group">

            <EditText
                android:id="@+id/ET_building_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:inputType="number"
                android:gravity="center|start"
                android:hint="@string/Building_number"
                android:padding="@dimen/_2sdp"
                android:textColorHint="@color/colorGrey6"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"
                android:drawableStart="@drawable/pin"
                android:drawablePadding="@dimen/_10sdp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_45sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_26sdp"
            app:cardBackgroundColor="@color/colorBlue"
            app:cardCornerRadius="@dimen/_11sdp"
            app:cardElevation="@dimen/_3sdp"
            android:clickable="true"
            app:layout_constraintTop_toBottomOf="@+id/T_in_building_number"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp">
                <TextView
                    android:layout_width="@dimen/_190sdp"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="@color/colorWhite"
                    android:text="@string/Sign_Up"
                    android:textSize="@dimen/_15sdp"
                    android:gravity="center"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_22sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_btn_register"
            />
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
