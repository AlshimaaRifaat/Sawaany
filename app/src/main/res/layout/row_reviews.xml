<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_55sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/doctor"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name here"
        app:layout_constraintStart_toEndOf="@id/img"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/_14ssp"
        android:layout_marginStart="@dimen/_8sdp"
        android:id="@+id/T_name"
        android:textStyle="bold"
        android:layout_marginEnd="@dimen/_12sdp"
        />
    <RatingBar
        android:id="@+id/rating_bar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:stepSize="1.0"
        android:rating="1.0"
        android:isIndicator="true"
        android:numStars="5"
        android:progressTint="@color/colorYellow"
        android:transformPivotX="0dp"
        android:progressBackgroundTint="@color/colorGrey6"
        app:layout_constraintTop_toBottomOf="@id/T_name"
        app:layout_constraintStart_toEndOf="@id/img"
        android:layout_marginEnd="@dimen/_12sdp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sdfghjkdfghj dfgh sdfghdfghjk dfghjkdfvgbnmbnmnbvcxsxdcvbn here"
        app:layout_constraintStart_toEndOf="@id/img"
        android:layout_marginEnd="@dimen/_20sdp"
        android:textColor="@color/colorGrey6"
        app:layout_constraintTop_toBottomOf="@id/rating_bar"
        android:textSize="@dimen/_11ssp"
        android:layout_marginStart="@dimen/_8sdp"
        android:id="@+id/T_desc"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        app:layout_constraintTop_toBottomOf="@id/img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_10ssp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:background="@color/colorGrey2"
        />
</androidx.constraintlayout.widget.ConstraintLayout>