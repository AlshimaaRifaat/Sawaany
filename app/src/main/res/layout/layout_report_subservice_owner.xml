    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/T_in_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_22sdp"
        android:layout_marginEnd="@dimen/_22sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/T_in_date">

        <EditText
            android:id="@+id/ET_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:inputType="text"
            android:gravity="center|start"
            android:hint="@string/Time"
            android:padding="@dimen/_2sdp"
            android:textColorHint="@color/colorGrey6"
            android:textStyle="bold"
            android:textSize="@dimen/_13sdp"
            android:drawableStart="@drawable/time"
            android:drawableEnd="@drawable/downarrow"
            android:paddingEnd="@dimen/_17sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:textColor="@color/colorGrey6"/>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_btn_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_45sdp"
        android:layout_marginEnd="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_12sdp"
        app:cardBackgroundColor="@color/colorBlue"
        app:cardCornerRadius="@dimen/_11sdp"
        app:cardElevation="@dimen/_3sdp"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@+id/T_in_time"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">
            <TextView
                android:layout_width="@dimen/_190sdp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/colorWhite"
                android:text="@string/Request"
                android:textSize="@dimen/_15sdp"
                android:gravity="center"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>