<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_135sdp"
        android:background="@color/colorGrey2"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/img_services"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_75sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/doctor"
            android:layout_marginTop="@dimen/_22sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_8sdp"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:text="@string/What_is_your_problem"
            android:textColor="@color/colorBlack"
            app:layout_constraintTop_toBottomOf="@id/img_services"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/T_in_problem_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_22sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_22sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline">

        <EditText
            android:id="@+id/problem_details"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:maxLines="3"
            android:baselineAligned="false"
            android:drawableStart="@drawable/job"
            android:drawablePadding="@dimen/_10sdp"
            android:hint="@string/Problem_details"
            android:inputType="text"
            android:padding="@dimen/_2sdp"
            android:textColorHint="@color/colorGrey6"
            android:textColor="@color/colorGrey6"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/T_in_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_22sdp"
        android:layout_marginEnd="@dimen/_22sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/T_in_problem_details">

        <EditText
            android:id="@+id/ET_date"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:inputType="text"
            android:gravity="center|start"
            android:hint="@string/Date"
            android:padding="@dimen/_2sdp"
            android:textColorHint="@color/colorGrey6"
            android:textStyle="bold"
            android:textColor="@color/colorGrey6"
            android:textSize="@dimen/_13sdp"
            android:drawableStart="@drawable/calender"
            android:drawableEnd="@drawable/downarrow"
            android:paddingEnd="@dimen/_17sdp"
            android:drawablePadding="@dimen/_10sdp"/>
    </com.google.android.material.textfield.TextInputLayout>
