<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/innerbg"
    tools:context=".fragment.DetailsSubServiceOwnerFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/constraint_home_container">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarhome"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            />

        <TextView
            android:id="@+id/T_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_bottom_corners"
            android:gravity="center"
            android:text="Electrican"
            android:textStyle="bold"
            android:textSize="@dimen/_14ssp"
            android:textAlignment="center"
            android:textColor="@color/colorBlue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.578" />
<RelativeLayout
    android:id="@+id/relative2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/T_owner"
    android:layout_marginTop="@dimen/_22sdp"
    android:layout_marginStart="@dimen/_30sdp"
    android:layout_marginEnd="@dimen/_30sdp">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_review"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="@dimen/_14sdp"
            app:cardElevation="@dimen/_3sdp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/T_availability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_57sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="available now"
                    android:textColor="@color/colorGreen"
                    android:textSize="@dimen/_15sdp"
                    app:layout_constraintVertical_bias="0.49"/>
                <TextView
                    android:id="@+id/T_review_numbers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_9sdp"
                    android:text="10 reviews"
                    android:textColor="@color/colorGrey6"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/T_availability"
                    />
                <RatingBar
                    android:id="@+id/rating_bar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:stepSize="1.0"
                    android:rating="1.0"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressTint="@color/colorYellow"
                    android:transformPivotX="0dp"
                    android:progressBackgroundTint="@color/colorGrey6"
                    app:layout_constraintEnd_toStartOf="@id/T_review_numbers"
                    app:layout_constraintTop_toBottomOf="@+id/T_availability"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
</RelativeLayout>

//to do: image
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_65sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/T_owner"
            android:layout_marginTop="@dimen/_17sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:background="@drawable/doctor"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorWhite"
            android:layout_margin="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/relative2"
            app:cardCornerRadius="@dimen/_14sdp"
            app:cardElevation="@dimen/_3sdp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               >
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/T_in_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_22sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_22sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
               >

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_43sdp"
                    android:inputType="text"
                    android:gravity="center|start"
                    android:text="Shimaa Refaat"
                    android:padding="@dimen/_2sdp"
                    android:textColorHint="@color/colorGrey6"
                    android:textStyle="bold"
                    android:textColor="@color/colorGrey6"
                    android:textSize="@dimen/_13sdp"
                    android:drawableStart="@drawable/user"
                    android:drawablePadding="@dimen/_10sdp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/T_in_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_22sdp"
                android:layout_marginEnd="@dimen/_22sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/T_in_name">

                <EditText
                    android:id="@+id/ET_phone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_43sdp"
                    android:inputType="number"
                    android:gravity="center|start"
                    android:padding="@dimen/_2sdp"
                    android:textColorHint="@color/colorGrey6"
                    android:textStyle="bold"
                    android:text="010425627"
                    android:textColor="@color/colorGrey6"
                    android:textSize="@dimen/_13sdp"
                    android:drawableStart="@drawable/phone"
                    android:drawablePadding="@dimen/_10sdp"/>
            </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/T_in_job"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_22sdp"
                    android:layout_marginEnd="@dimen/_22sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/T_in_phone">

                    <EditText
                        android:id="@+id/ET_job"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_43sdp"
                        android:inputType="text"
                        android:gravity="center|start"
                        android:padding="@dimen/_2sdp"
                        android:textColor="@color/colorGrey6"
                        android:textStyle="bold"
                        android:text="Electrican"
                        android:textSize="@dimen/_13sdp"
                        android:drawableStart="@drawable/job"
                        android:drawablePadding="@dimen/_10sdp"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/T_in_years_exp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_22sdp"
                    android:layout_marginEnd="@dimen/_22sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/T_in_job">

                    <EditText
                        android:id="@+id/ET_years_exp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_43sdp"
                        android:inputType="text"
                        android:gravity="center|start"
                        android:padding="@dimen/_2sdp"
                        android:textColor="@color/colorGrey6"
                        android:textStyle="bold"
                        android:text="10 years experience"
                        android:textSize="@dimen/_13sdp"
                        android:drawableStart="@drawable/id"
                        android:drawablePadding="@dimen/_10sdp"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/T_in_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_22sdp"
                    android:layout_marginEnd="@dimen/_22sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/T_in_years_exp">

                    <EditText
                        android:id="@+id/ET_address"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_43sdp"
                        android:inputType="text"
                        android:gravity="center|start"
                        android:padding="@dimen/_2sdp"
                        android:textColor="@color/colorGrey6"
                        android:textStyle="bold"
                        android:text="address"
                        android:textSize="@dimen/_13sdp"
                        android:drawableStart="@drawable/pin"
                        android:drawablePadding="@dimen/_10sdp"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/T_in_specialization"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_22sdp"
                    android:layout_marginEnd="@dimen/_22sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/T_in_address">

                    <EditText
                        android:id="@+id/ET_specialization"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_43sdp"
                        android:inputType="text"
                        android:gravity="center|start"
                        android:padding="@dimen/_2sdp"
                        android:textColor="@color/colorGrey6"
                        android:textStyle="bold"
                        android:text="specialization"
                        android:textSize="@dimen/_13sdp"
                        android:drawableStart="@drawable/image"
                        android:drawablePadding="@dimen/_10sdp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_btn_request"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_45sdp"
                    android:layout_marginEnd="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    app:cardBackgroundColor="@color/colorBlue"
                    app:cardCornerRadius="@dimen/_11sdp"
                    app:cardElevation="@dimen/_3sdp"
                    android:clickable="true"
                    app:layout_constraintTop_toBottomOf="@+id/T_in_specialization"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp">
                        <TextView
                            android:layout_width="@dimen/_190sdp"
                            android:layout_height="match_parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:textColor="@color/colorWhite"
                            android:text="@string/Request"
                            android:textSize="@dimen/_15sdp"
                            android:gravity="center"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/T_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_btn_request"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="Report Ahmed?"
                    android:textStyle="bold"
                    android:textColor="@color/colorGrey6"
                    android:textSize="@dimen/_15ssp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_13sdp"
                    app:layout_constraintTop_toBottomOf="@id/T_report"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            app:layout_constraintTop_toBottomOf="@id/card_details"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>